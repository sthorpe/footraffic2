%h1 Step 1: Your Business

- semantic_form_for :business, :url=>{ :action => :step1 } do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name, :label => "Business Name"
    = f.input :email, :label => "Your Email"
    = f.input :description, :as => :text, :required => false, :label => "Description"
    %li
      %label Category*  
      = select("business", "primary_category", Category.all.collect {|p| [ p.name, p.id ] }, { :include_blank => false })
    / - 2.times do |n|
    /       %li
    /         %label &nbsp;
    /         = select("business", "categories", Category.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true })
  .buttons= wizardly_submit

%script{ :type => 'text/javascript' }
  document.getElementById('business_name').focus();