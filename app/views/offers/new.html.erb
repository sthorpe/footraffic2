<h1>New offer</h1>

<% form_for(@offer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :value => params[:company_name] %>
  </p>
  <p>
    <%= f.label :item %><br />
    <%= f.text_field :item %>
  </p>
  <p>
    <%= f.label :offer_terms %><br />
    <%= f.text_field :offer_terms %>
  </p>
  <p>
    <%= f.label :offer_expiration %><br />
    <%= f.date_select :offer_expiration %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', offers_path %>